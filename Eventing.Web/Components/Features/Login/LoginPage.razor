@page "/login"
@layout EmptyLayout
@rendermode InteractiveServer

<PageTitle>Login</PageTitle>

<FluentStack HorizontalAlignment="HorizontalAlignment.Center"
             VerticalAlignment="VerticalAlignment.Center"
             Style="height:100vh; background-color:#1e1e2f; padding:2rem;">
    
    <FluentCard Style="width:420px; min-width:350px; padding:2rem; box-shadow:0 8px 30px rgba(0,0,0,0.6); border-radius:24px; background-color:#2a2a3d;">
        
        <FluentStack Orientation="Orientation.Vertical" HorizontalAlignment="HorizontalAlignment.Center">
            <h2 style="margin-bottom:0.5rem; color:#ffffff;">Welcome Back!</h2>
            <p style="margin-bottom:2rem; color:#aaa; text-align:center;">Sign in to your account to continue</p>
        </FluentStack>

        <FluentEditForm Model="LoginModel" OnValidSubmit="SubmitAsync">
            <DataAnnotationsValidator/>

            <FluentStack Orientation="Orientation.Vertical" Gap="14px">

                <FluentTextField Name="email" @bind-Value="LoginModel.Email" Label="Email" Placeholder="user@email.com"
                                 Required="true" Style="font-size:1rem; height:50px; border-radius:12px;">
                    <FluentIcon Value="@(new Icons.Regular.Size16.Mail())" Slot="start" Color="Color.Neutral"/>
                </FluentTextField>
                <FluentValidationMessage For="@(() => LoginModel.Email)"/>

                <FluentTextField Name="password" @bind-Value="LoginModel.Password" Label="Password"
                                 TextFieldType="TextFieldType.Password"
                                 Required="true" Style="font-size:1rem; height:50px; border-radius:12px;">
                    <FluentIcon Value="@(new Icons.Regular.Size16.Password())" Slot="start" Color="@Color.Neutral"/>
                </FluentTextField>
                <FluentValidationMessage For="@(() => LoginModel.Password)"/>

                <FluentCheckbox @bind-Value="@LoginModel.RememberMe">Remember me</FluentCheckbox>

                <FluentButton Appearance="Appearance.Accent" Type="ButtonType.Submit" Style="width:100%; height:50px; font-size:1rem; border-radius:12px;">
                    Sign In
                </FluentButton>

            </FluentStack>
        </FluentEditForm>

        <FluentStack HorizontalAlignment="HorizontalAlignment.Center" Style="margin-top:1.5rem;">
            <span style="color:#aaa;">Don't have an account?</span>
            <a href="/register" style="margin-left:0.25rem; color:#00bfff;">Sign Up</a>
        </FluentStack>
    </FluentCard>
</FluentStack>
